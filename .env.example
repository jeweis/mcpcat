# 应用配置
APP_NAME=MCPCat
APP_VERSION=0.1.0
DEBUG=True

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 数据库配置（如果需要）
# DATABASE_URL=sqlite:///./mcpcat.db

# MCP配置
MCP_DEFAULT_PROTOCOL=stdio
MCP_MAX_CONNECTIONS=100
MCP_TIMEOUT=30
MCPCAT_CONFIG_PATH=config.json

